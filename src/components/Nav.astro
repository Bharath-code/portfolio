---
const navElements = [
  {
    id: 1,
    name: "Home",
    path: "/",
  },
  {
    id: 2,
    name: "Story",
    path: "/story",
  },
  {
    id: 3,
    name: "Blogs",
    path: "/blogs",
  },
  {
    id: 4,
    name: "Experiences",
    path: "/experiences",
  },
  {
    id: 5,
    name: "Projects",
    path: "/projects",
  },
];
---

<header class="classic-header">
  <section class="header-content">
    <a href="/" class="logo-container">
      <img
        src="/assets/sidharth-mohanty.jpeg"
        alt="Sidharth Mohanty"
        class="profile-image"
      />
    </a>

    <nav class="desktop-nav">
      <ul class="nav-list">
        {
          navElements.map((element) => (
            <li class="nav-item">
              <a href={element.path} class="nav-link">
                {element.name}
              </a>
            </li>
          ))
        }
        <li class="nav-item">
          <a
            target="_blank"
            rel="noopener noreferrer"
            href="https://drive.google.com/file/d/1EoFN--jq4xlQJ53tqIHTBhZa87qdNUUG/view"
            class="nav-link resume-link">Resume</a
          >
        </li>
      </ul>
    </nav>

    <div class="header-controls">
      <button type="button" class="mobile-nav-btn" id="navigationBtn">
        <span class="mobile-nav-text">Menu</span>
        <svg
          class="mobile-nav-icon"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
        >
          <line x1="3" y1="6" x2="21" y2="6"></line>
          <line x1="3" y1="12" x2="21" y2="12"></line>
          <line x1="3" y1="18" x2="21" y2="18"></line>
        </svg>
      </button>
    </div>
  </section>

  <!-- Mobile Navigation -->
  <section class="mobile-nav hidden" id="mobileNav">
    <div class="mobile-nav-header">
      <h3 class="mobile-nav-title">Navigation</h3>
      <button class="mobile-nav-close" id="closeNavBtn">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
          <line x1="18" y1="6" x2="6" y2="18"></line>
          <line x1="6" y1="6" x2="18" y2="18"></line>
        </svg>
      </button>
    </div>
    <nav class="mobile-nav-content">
      <ul class="mobile-nav-list">
        {
          navElements.map((el) => (
            <li class="mobile-nav-item">
              <a href={el.path} class="mobile-nav-link">
                {el.name}
              </a>
            </li>
          ))
        }
        <li class="mobile-nav-item">
          <a
            target="_blank"
            rel="noopener noreferrer"
            href="https://drive.google.com/file/d/1EoFN--jq4xlQJ53tqIHTBhZa87qdNUUG/view"
            class="mobile-nav-link">Resume</a
          >
        </li>
      </ul>
    </nav>
  </section>
</header>

<style>
  .classic-header {
    position: sticky;
    top: 0;
    z-index: 50;
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(10px);
    border-bottom: 1px solid rgba(0, 0, 0, 0.1);
    padding: 1rem 0;
  }

  .header-content {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .logo-container {
    text-decoration: none;
  }

  .profile-image {
    width: 2.5rem;
    height: 2.5rem;
    border-radius: 50%;
    border: 2px solid transparent;
    transition: border-color 0.3s ease;
  }

  .profile-image:hover {
    border-color: #000000;
  }

  .desktop-nav {
    display: none;
  }

  @media (min-width: 768px) {
    .desktop-nav {
      display: block;
    }
  }

  .nav-list {
    display: flex;
    list-style: none;
    margin: 0;
    padding: 0;
    gap: 2.5rem;
  }

  .nav-item {
    position: relative;
  }

  .nav-link {
    color: #000000;
    text-decoration: none;
    font-weight: 400;
    font-size: 0.9rem;
    letter-spacing: 0.05em;
    text-transform: uppercase;
    transition: all 0.3s ease;
    position: relative;
  }

  .nav-link:hover {
    opacity: 0.6;
  }

  .nav-link.active::after {
    content: "";
    position: absolute;
    bottom: -0.5rem;
    left: 0;
    right: 0;
    height: 1px;
    background: #000000;
  }

  .resume-link {
    border: 1px solid #000000;
    padding: 0.5rem 1rem;
    transition: all 0.3s ease;
  }

  .resume-link:hover {
    background: #000000;
    color: #ffffff !important;
    opacity: 1;
  }

  .header-controls {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .mobile-nav-btn {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    background: none;
    border: 1px solid #000000;
    color: #000000;
    padding: 0.5rem 1rem;
    cursor: pointer;
    transition: all 0.3s ease;
    font-size: 0.85rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  @media (min-width: 768px) {
    .mobile-nav-btn {
      display: none;
    }
  }

  .mobile-nav-btn:hover {
    background: #000000;
    color: #ffffff;
  }

  .mobile-nav-text {
    font-size: 0.85rem;
  }

  .mobile-nav-icon {
    width: 1rem;
    height: 1rem;
    stroke-width: 1.5;
  }

  /* Mobile Navigation */
  .mobile-nav {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(255, 255, 255, 0.98);
    backdrop-filter: blur(10px);
    z-index: 100;
    padding: 2rem;
  }

  .mobile-nav.hidden {
    display: none;
  }

  .mobile-nav-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 3rem;
  }

  .mobile-nav-title {
    font-family: "Playfair Display", serif;
    font-size: 1.5rem;
    font-weight: 600;
    margin: 0;
    color: #000000;
  }

  .mobile-nav-close {
    background: none;
    border: 1px solid #000000;
    color: #000000;
    width: 2.5rem;
    height: 2.5rem;
    cursor: pointer;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .mobile-nav-close:hover {
    background: #000000;
    color: #ffffff;
  }

  .mobile-nav-close svg {
    width: 1.2rem;
    height: 1.2rem;
    stroke-width: 1.5;
  }

  .mobile-nav-list {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .mobile-nav-item {
    margin-bottom: 2rem;
  }

  .mobile-nav-link {
    color: #000000;
    text-decoration: none;
    font-family: "Playfair Display", serif;
    font-size: 2rem;
    font-weight: 500;
    transition: opacity 0.3s ease;
    display: block;
  }

  .mobile-nav-link:hover {
    opacity: 0.6;
  }
</style>

<script>
  const mobileNav = document.querySelector("#mobileNav");
  const navigationBtn = document.querySelector("#navigationBtn");
  const closeNavBtn = document.querySelector("#closeNavBtn");

  const pathname = window.location.pathname;

  // Set active navigation link
  const navLinks = document.querySelectorAll(".nav-link, .mobile-nav-link");
  navLinks.forEach((link) => {
    const href = link.getAttribute("href");
    if (href === pathname || `${href}/` === pathname) {
      link.classList.add("active");
    }
  });

  // Mobile navigation
  document.addEventListener("click", (e) => {
    if (
      e.target !== mobileNav &&
      e.target !== navigationBtn &&
      !mobileNav?.contains(e.target as Node) &&
      !navigationBtn?.contains(e.target as Node)
    ) {
      mobileNav?.classList.add("hidden");
    }
  });

  closeNavBtn?.addEventListener("click", () => {
    mobileNav?.classList.add("hidden");
  });

  navigationBtn?.addEventListener("click", () => {
    mobileNav?.classList.remove("hidden");
  });
</script>
