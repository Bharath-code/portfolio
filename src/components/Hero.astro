<style>
  .hero-section {
    padding: 4rem 0 6rem;
    margin-top: 2rem;
  }

  .hero-content {
    display: grid;
    gap: 4rem;
    align-items: center;
  }

  @media (min-width: 768px) {
    .hero-content {
      grid-template-columns: 1fr 400px;
      gap: 6rem;
    }
  }

  .hero-text {
    order: 2;
  }

  @media (min-width: 768px) {
    .hero-text {
      order: 1;
    }
  }

  .hero-title {
    font-family: "Playfair Display", serif;
    font-size: 3rem;
    font-weight: 700;
    line-height: 1.1;
    margin-bottom: 0.5rem;
    color: #000000;
    letter-spacing: -0.02em;
  }

  @media (min-width: 768px) {
    .hero-title {
      font-size: 4rem;
    }
  }

  body.classic-theme.dark-mode .hero-title {
    color: #ffffff !important;
  }

  .hero-subtitle {
    font-family: "Inter", sans-serif;
    font-size: 1.25rem;
    font-weight: 300;
    margin-bottom: 2rem;
    color: #666666;
    text-transform: uppercase;
    letter-spacing: 0.15em;
  }

  body.classic-theme.dark-mode .hero-subtitle {
    color: #cccccc !important;
  }

  .hero-description,
  .hero-education {
    font-size: 1.1rem;
    line-height: 1.7;
    margin-bottom: 1.5rem;
    color: #333333;
  }

  body.classic-theme.dark-mode .hero-description,
  body.classic-theme.dark-mode .hero-education {
    color: #dddddd !important;
  }

  .hero-education {
    margin-bottom: 3rem;
  }

  .social-links {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(140px, 1fr));
    gap: 1rem;
  }

  @media (min-width: 768px) {
    .social-links {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .social-link {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.75rem 1rem;
    border: 1px solid #000000;
    color: #000000;
    text-decoration: none;
    font-size: 0.85rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    transition: all 0.3s ease;
    justify-content: center;
  }

  body.classic-theme.dark-mode .social-link {
    border-color: #ffffff !important;
    color: #ffffff !important;
  }

  .social-link:hover {
    background: #000000;
    color: #ffffff;
  }

  body.classic-theme.dark-mode .social-link:hover {
    background: #ffffff !important;
    color: #000000 !important;
  }

  .social-link svg {
    width: 1.2rem;
    height: 1.2rem;
  }

  .hero-image {
    order: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  @media (min-width: 768px) {
    .hero-image {
      order: 2;
    }
  }

  .image-container {
    position: relative;
    margin-bottom: 2rem;
  }

  .profile-photo {
    width: 250px;
    height: 300px;
    object-fit: cover;
    filter: grayscale(100%);
    transition: filter 0.3s ease;
  }

  .profile-photo:hover {
    filter: grayscale(0%);
  }

  .image-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    border: 2px solid #000000;
    transform: translate(10px, 10px);
    z-index: -1;
    transition: transform 0.3s ease;
  }

  body.classic-theme.dark-mode .image-overlay {
    border-color: #ffffff !important;
  }

  .image-container:hover .image-overlay {
    transform: translate(5px, 5px);
  }

  .profile-info {
    max-width: 300px;
    text-align: center;
  }

  .profile-role {
    font-size: 0.9rem;
    line-height: 1.6;
    color: #666666;
    font-style: italic;
  }

  body.classic-theme.dark-mode .profile-role {
    color: #cccccc !important;
  }
</style>
