---
export interface Props {
  project: {
    id: string | number;
    name: string;
    description: string;
    github_link: string;
    live_link?: string;
    imgUrl: string;
    category?: string;
    year?: string;
  };
  index?: number;
}

const { project, index = 0 } = Astro.props;
---

<article class="mobile-project-card">
  <div class="card-header">
    <div class="project-number">{String(index + 1).padStart(2, "0")}</div>
    <div class="project-meta">
      {
        project.category && (
          <span class="project-category">{project.category}</span>
        )
      }
      {project.year && <span class="project-year">{project.year}</span>}
    </div>
  </div>

  <div class="mobile-frame">
    <div class="frame-header">
      <div class="frame-notch"></div>
    </div>

    <div class="screen-container">
      <img
        src={project.imgUrl}
        alt={project.name}
        class="app-screenshot"
        loading="lazy"
      />
      <div class="screen-overlay">
        <div class="overlay-content">
          <h3 class="overlay-title">{project.name}</h3>
          <p class="overlay-description">{project.description}</p>
          <div class="overlay-actions">
            {
              project.github_link && (
                <a
                  href={project.github_link}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="action-button"
                  aria-label="View GitHub repository"
                >
                  <svg viewBox="0 0 24 24" fill="currentColor">
                    <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" />
                  </svg>
                  <span>Code</span>
                </a>
              )
            }

            {
              project.live_link && (
                <a
                  href={project.live_link}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="action-button"
                  aria-label="Download app"
                >
                  <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                    <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4" />
                    <polyline points="7,10 12,15 17,10" />
                    <line x1="12" y1="15" x2="12" y2="3" />
                  </svg>
                  <span>Download</span>
                </a>
              )
            }
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="card-content">
    <h3 class="project-title">{project.name}</h3>
    <p class="project-description">{project.description}</p>

    <div class="project-links">
      {
        project.github_link && (
          <a
            href={project.github_link}
            target="_blank"
            rel="noopener noreferrer"
            class="project-link"
          >
            <span>View Code</span>
            <svg viewBox="0 0 24 24" fill="currentColor">
              <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" />
            </svg>
          </a>
        )
      }

      {
        project.live_link && (
          <a
            href={project.live_link}
            target="_blank"
            rel="noopener noreferrer"
            class="project-link download-link"
          >
            <span>Download</span>
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
              <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4" />
              <polyline points="7,10 12,15 17,10" />
              <line x1="12" y1="15" x2="12" y2="3" />
            </svg>
          </a>
        )
      }
    </div>
  </div>
</article>

<style>
  .mobile-project-card {
    background: transparent;
    border: 1px solid rgba(0, 0, 0, 0.2);
    padding: 1.5rem;
    transition: all 0.3s ease;
    height: 100%;
    display: flex;
    flex-direction: column;
    max-width: 300px;
    margin: 0 auto;
  }

  body.classic-theme.dark-mode .mobile-project-card {
    border-color: rgba(255, 255, 255, 0.2) !important;
  }

  .mobile-project-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
  }

  .classic-theme.dark-mode .mobile-project-card:hover {
    box-shadow: 0 10px 30px rgba(255, 255, 255, 0.1);
  }

  .card-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1.5rem;
  }

  .project-number {
    font-family: "Playfair Display", serif;
    font-size: 1.5rem;
    font-weight: 700;
    color: #000000;
    line-height: 1;
  }

  .classic-theme.dark-mode .project-number {
    color: #ffffff;
  }

  .project-meta {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    gap: 0.5rem;
  }

  .project-category,
  .project-year {
    font-size: 0.8rem;
    color: #666666;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    font-weight: 500;
  }

  .classic-theme.dark-mode .project-category,
  .classic-theme.dark-mode .project-year {
    color: #cccccc;
  }

  .project-category {
    padding: 0.25rem 0.75rem;
    border: 1px solid rgba(0, 0, 0, 0.2);
  }

  body.classic-theme.dark-mode .project-category {
    border-color: rgba(255, 255, 255, 0.2) !important;
  }

  .mobile-frame {
    position: relative;
    background: #000000;
    border-radius: 2rem;
    padding: 1rem;
    margin-bottom: 1.5rem;
    transition: all 0.3s ease;
  }

  .classic-theme.dark-mode .mobile-frame {
    background: #ffffff;
  }

  .frame-header {
    position: relative;
    height: 1rem;
    margin-bottom: 0.5rem;
    display: flex;
    justify-content: center;
  }

  .frame-notch {
    width: 60px;
    height: 4px;
    background: #333333;
    border-radius: 2px;
  }

  .classic-theme.dark-mode .frame-notch {
    background: #cccccc;
  }

  .screen-container {
    position: relative;
    border-radius: 1.5rem;
    overflow: hidden;
    height: 300px;
    background: #f8f8f8;
  }

  .classic-theme.dark-mode .screen-container {
    background: #1a1a1a;
  }

  .app-screenshot {
    width: 100%;
    height: 100%;
    object-fit: cover;
    filter: grayscale(100%);
    transition: all 0.3s ease;
  }

  .mobile-project-card:hover .app-screenshot {
    filter: grayscale(0%);
    transform: scale(1.05);
  }

  .screen-overlay {
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0.9);
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    visibility: hidden;
    transition: all 0.3s ease;
  }

  .classic-theme.dark-mode .screen-overlay {
    background: rgba(255, 255, 255, 0.95);
  }

  .screen-container:hover .screen-overlay {
    opacity: 1;
    visibility: visible;
  }

  .overlay-content {
    text-align: center;
    padding: 1.5rem;
    color: #ffffff;
  }

  .classic-theme.dark-mode .overlay-content {
    color: #000000;
  }

  .overlay-title {
    font-family: "Playfair Display", serif;
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: 0.75rem;
  }

  .overlay-description {
    font-size: 0.8rem;
    line-height: 1.4;
    margin-bottom: 1rem;
    opacity: 0.9;
  }

  .overlay-actions {
    display: flex;
    gap: 0.75rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .action-button {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: #ffffff;
    text-decoration: none;
    font-size: 0.8rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    border: 1px solid #ffffff;
    padding: 0.4rem 0.8rem;
    transition: all 0.3s ease;
  }

  body.classic-theme.dark-mode .action-button {
    color: #000000 !important;
    border-color: #000000 !important;
  }

  .action-button:hover {
    background: #ffffff;
    color: #000000;
  }

  body.classic-theme.dark-mode .action-button:hover {
    background: #000000 !important;
    color: #ffffff !important;
  }

  .action-button svg {
    width: 0.9rem;
    height: 0.9rem;
    stroke-width: 2;
  }

  .card-content {
    flex: 1;
    display: flex;
    flex-direction: column;
  }

  .project-title {
    font-family: "Playfair Display", serif;
    font-size: 1.1rem;
    font-weight: 600;
    color: #000000;
    margin-bottom: 0.75rem;
    text-align: center;
  }

  .classic-theme.dark-mode .project-title {
    color: #ffffff;
  }

  .project-description {
    font-size: 0.9rem;
    line-height: 1.5;
    color: #666666;
    margin-bottom: 1.5rem;
    text-align: center;
    flex: 1;
  }

  .classic-theme.dark-mode .project-description {
    color: #cccccc;
  }

  .project-links {
    display: flex;
    gap: 0.75rem;
    margin-top: auto;
  }

  .project-link {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    color: #000000;
    text-decoration: none;
    font-size: 0.8rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    border: 1px solid rgba(0, 0, 0, 0.3);
    padding: 0.5rem 1rem;
    transition: all 0.3s ease;
    flex: 1;
  }

  body.classic-theme.dark-mode .project-link {
    color: #ffffff !important;
    border-color: rgba(255, 255, 255, 0.3) !important;
  }

  .project-link:hover {
    background: #000000;
    color: #ffffff;
    border-color: #000000;
  }

  body.classic-theme.dark-mode .project-link:hover {
    background: #ffffff !important;
    color: #000000 !important;
    border-color: #ffffff !important;
  }

  .project-link svg {
    width: 1rem;
    height: 1rem;
    stroke-width: 2;
  }

  .download-link {
    border-color: #000000;
    background: #000000;
    color: #ffffff;
  }

  body.classic-theme.dark-mode .download-link {
    border-color: #ffffff !important;
    background: #ffffff !important;
    color: #000000 !important;
  }

  .download-link:hover {
    background: transparent;
    color: #000000;
  }

  body.classic-theme.dark-mode .download-link:hover {
    background: transparent !important;
    color: #ffffff !important;
  }
</style>
