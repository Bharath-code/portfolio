<style>
  .classic-footer {
    border-top: 1px solid rgba(0, 0, 0, 0.1);
    padding: 3rem 0 2rem;
    margin-top: 4rem;
  }

  .footer-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 2rem;
  }

  @media (max-width: 768px) {
    .footer-content {
      flex-direction: column;
      gap: 2rem;
      text-align: center;
    }
  }

  .footer-copyright p {
    margin: 0;
    font-size: 0.9rem;
    color: #666666;
    font-weight: 400;
  }

  .footer-links {
    display: flex;
    gap: 1.5rem;
    align-items: center;
  }

  @media (max-width: 768px) {
    .footer-links {
      justify-content: center;
    }
  }

  .footer-icon-link {
    color: #000000;
    text-decoration: none;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 2.5rem;
    height: 2.5rem;
    border: 1px solid transparent;
  }

  .footer-icon-link:hover {
    border-color: #000000;
    opacity: 0.7;
  }

  .footer-icon-link svg {
    width: 1.2rem;
    height: 1.2rem;
  }

  .footer-divider {
    height: 1px;
    background: rgba(0, 0, 0, 0.1);
    margin: 2rem 0 1.5rem;
  }

  .footer-bottom {
    text-align: center;
  }

  .footer-tagline {
    margin: 0;
    font-size: 0.85rem;
    color: #999999;
    font-style: italic;
    letter-spacing: 0.05em;
  }
</style>
